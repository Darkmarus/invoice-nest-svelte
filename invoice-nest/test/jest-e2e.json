{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/application(|/.*)$": "<rootDir>/../libs/application/src/$1",
    "^@app/domain(|/.*)$": "<rootDir>/../libs/domain/src/$1",
    "^@app/infrastructure(|/.*)$": "<rootDir>/../libs/infrastructure/src/$1"
  }
}